div(ui-view="page")
    h1 Map View
div(class="form-group" style="width: 20%; padding: 0px; text-align: left; float:left;")
    div(style="padding: 5px; text-align: left; width: 100%;")
        label(style="width: 100%;") Map Scope
        select(ng-model="mapScopeData.model" style="width: 100%;")
            option(ng-repeat="option in mapScopeData.availableOptions" value="{{option.value}}") {{option.name}}
    div(style="padding: 5px; text-align: left;")
        label(style="width: 100%;") Map Type
        select(ng-model="mapTypeData.model" style="width: 100%;")
            option(ng-repeat="option in mapTypeData.availableOptions" value="{{option.value}}") {{option.name}}
    div(style="padding: 5px; text-align: left;")
        label(for='occupations' style="width: 100%;") Choose a minimum date
        input(type="number" step="1" ng-model="newTimeMin.value" ng-min=0 ng-max=2017)
    div(style="padding: 5px; text-align: left;")
        label(for='occupations' style="width: 100%;") Choose a maximum date
        input(type="number" step="1" ng-model="newTimeMax.value" ng-min=0 ng-max=2017)
div(id="mapView" style="padding: 0px; width: 40%; float:left;")
